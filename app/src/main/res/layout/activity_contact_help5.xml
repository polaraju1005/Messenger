<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactHelpActivity5">

    <TextView
        android:id="@+id/paraOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="If some of your friends don't appear in the contacts list, we recommend the following steps:"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/paraTwo"
        android:layout_width="wrap_content"
        android:fontFamily="@font/poppins"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paraOne"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="1.Make sure that your friend's phone number is in your address book"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/paraThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paraTwo"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="2.Make sure your friend is using Whatsapp Messenger"
        android:textColor="#000000"
        android:textSize="16sp"/>

</RelativeLayout>